<h1>Shopping List</h1>

<% @items.each do |item| %>
<ul>
  <h2><%= item.name %></h2>
  <form action="/shopping-list/<%= item.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>
  <form action="/shopping-list/<%= item.id %>/edit" method="get">
    <input type="submit" value="Edit">
  </form>
  <form action="/shopping-list/<%= item.id %>/comment/new" method="get">
    <input type="submit" value="Add comment">
  </form>
  <form action="/shopping-list/<%= item.id %>/comments" method="get">
    <input type="submit" value="View comments">
  </form>
</ul>
<% end %>

<br>

<a href="/shopping-list/new">Add item</a>
